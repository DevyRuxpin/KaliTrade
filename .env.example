# KaliTrade Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=8080

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://kaltrade:password@localhost:5432/kaltrade
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# ===========================================
# EXCHANGE API CREDENTIALS
# ===========================================

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_ENABLED=true
BINANCE_TESTNET=false

# Kraken API Configuration
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_PRIVATE_KEY=your_kraken_private_key
KRAKEN_ENABLED=false

# Coinbase Pro API Configuration
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET=your_coinbase_secret
COINBASE_PASSPHRASE=your_coinbase_passphrase
COINBASE_ENABLED=false

# ===========================================
# AI & MACHINE LEARNING
# ===========================================
AI_MODEL_TYPE=advanced_ensemble
AI_CONFIDENCE_THRESHOLD=0.7
AI_RISK_TOLERANCE=medium
AI_MAX_POSITION_SIZE=0.1

# OpenAI API (for advanced AI features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# ===========================================
# MARKET DATA PROVIDERS
# ===========================================

# CoinGecko API (Free tier)
COINGECKO_API_KEY=your_coingecko_api_key

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# News API
NEWS_API_KEY=your_news_api_key

# Polygon API
POLYGON_API_KEY=your_polygon_api_key

# ===========================================
# TRADING CONFIGURATION
# ===========================================
DEFAULT_RISK_LEVEL=medium
MAX_DAILY_TRADES=50
DEFAULT_STOP_LOSS=0.05
DEFAULT_TAKE_PROFIT=0.15
MIN_ORDER_SIZE=10
MAX_ORDER_SIZE=10000

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn

# ===========================================
# EMAIL & NOTIFICATIONS
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@kaltrade.com

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kaltrade-storage

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:8080
CORS_CREDENTIALS=true

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# ===========================================
# TRADING BOT SETTINGS
# ===========================================
BOT_UPDATE_INTERVAL=60000
BOT_MAX_CONCURRENT_STRATEGIES=10
BOT_DEFAULT_REBALANCE_INTERVAL=3600000

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancer
TRUST_PROXY=true

# Performance
CLUSTER_MODE=false
WORKER_PROCESSES=4