# Production Environment Configuration for KaliTrade

# Application Settings
NODE_ENV=production
DEBUG=false
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://kalitrade_user:${DB_PASSWORD}@prod-db-host:5432/kalitrade_prod
REDIS_URL=redis://prod-redis-host:6379

# Frontend Configuration
FRONTEND_URL=https://kalitrade.app
BACKEND_URL=https://api.kalitrade.app

# JWT Configuration
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRES_IN=7d
JWT_EXPIRES_IN_MS=604800000

# Exchange OAuth2 Configuration
BINANCE_OAUTH_CLIENT_ID=${BINANCE_CLIENT_ID_PROD}
BINANCE_OAUTH_CLIENT_SECRET=${BINANCE_CLIENT_SECRET_PROD}
COINBASE_OAUTH_CLIENT_ID=${COINBASE_CLIENT_ID_PROD}
COINBASE_OAUTH_CLIENT_SECRET=${COINBASE_CLIENT_SECRET_PROD}
KRAKEN_API_KEY=${KRAKEN_API_KEY_PROD}
KRAKEN_API_SECRET=${KRAKEN_API_SECRET_PROD}

# Market Data APIs
COINGECKO_API_KEY=${COINGECKO_API_KEY}
COINMARKETCAP_API_KEY=${COINMARKETCAP_API_KEY}
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY_PROD}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY_PROD}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_PROD}

# Security Configuration
ENCRYPTION_KEY=${ENCRYPTION_KEY_PROD}
ALLOWED_ORIGINS=https://kalitrade.app,https://www.kalitrade.app
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Trading Configuration
MAX_POSITION_SIZE=0.2
DEFAULT_LEVERAGE=1.0
RISK_TOLERANCE=medium
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.10
STOP_LOSS_PERCENTAGE=0.02

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/kalitrade/app.log
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/kalitrade.crt
SSL_KEY_PATH=/etc/ssl/private/kalitrade.key

# CDN Configuration
CDN_URL=https://cdn.kalitrade.app
STATIC_ASSETS_URL=https://assets.kalitrade.app

# Email Configuration (for notifications)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@kalitrade.app

# Push Notifications
FCM_SERVER_KEY=${FCM_SERVER_KEY}
APNS_KEY_ID=${APNS_KEY_ID}
APNS_TEAM_ID=${APNS_TEAM_ID}
APNS_BUNDLE_ID=com.kalitrade.app

# Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}
CRASHLYTICS_API_KEY=${CRASHLYTICS_API_KEY}

# Backup Configuration
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_AWS_ACCESS_KEY=${BACKUP_AWS_ACCESS_KEY}
BACKUP_AWS_SECRET_KEY=${BACKUP_AWS_SECRET_KEY}
BACKUP_RETENTION_DAYS=30

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_TIMEOUT=30

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true

# Feature Flags
ENABLE_PAPER_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_SOCIAL_TRADING=false
ENABLE_COPY_TRADING=false
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_PORTFOLIO_ANALYTICS=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_AUTOMATED_REBALANCING=false

# Compliance & Legal
TERMS_OF_SERVICE_URL=https://kalitrade.app/terms
PRIVACY_POLICY_URL=https://kalitrade.app/privacy
SUPPORT_EMAIL=support@kalitrade.app
COMPLIANCE_EMAIL=compliance@kalitrade.app

# Regional Configuration
DEFAULT_TIMEZONE=UTC
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko

# Performance Configuration
MAX_CONCURRENT_TRADES=10
MAX_ORDER_SIZE=10000
MIN_ORDER_SIZE=10
TRADING_HOURS_START=00:00
TRADING_HOURS_END=23:59

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="KaliTrade is currently under maintenance. We'll be back shortly."
